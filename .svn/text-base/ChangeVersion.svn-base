#!/bin/bash
# Datei zur Erneuerung der Versionsnummer -- Marco Daniel
# Eingabe der neuen Versionsnummer erforderlich
# $Id$

oldversion=$1
newversion=$2

Dateinamen=(mdframed-doc-en.tex mdframed.sty md-frame-0.mdf md-frame-1.mdf md-frame-3.mdf)


if test -z "$newversion" || test -z "$oldversion"
 then
    echo "Du hast min. eine Versionsnummern vergessen!!!" 
 else
    for item in ${Dateinamen[*]} 
       do
        echo "Beginn der Ersetzung in der Datei ${item} von Version $oldversion zu $newversion ..." 
#        sed --in-place=sedbak 's!\\def\\mdversion{v'$oldversion'}!\\def\\mdversion{v'$newversion'}!g' $item
        sed --in-place=sedbak 's!\\def\\mdversion{v'$oldversion'}!\\def\\mdversion{v'$newversion'}!g' ${item}
    done
fi

exit 0


